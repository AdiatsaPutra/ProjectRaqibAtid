<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="-34dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/bg">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-9dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="87dp"
            android:text="Assalamu'alaikum, Selamat Datang"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="88dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="232dp"
            android:layout_marginBottom="-299dp"
            android:text="RaqibAtid"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="321dp"
            android:layout_marginBottom="99dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/bgro"></ImageView>

        <ImageView
            android:id="@+id/pick_time"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="330dp"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="38dp"
            android:src="@drawable/ic_add_alarm_black_24dp"
            android:tint="@color/colorPrimary"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.2"
            android:layout_marginTop="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-9dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="257dp"
            android:src="@drawable/line_between"></ImageView>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="54dp"
            android:text="“(yaitu) ketika dua orang malaikat mencatat amal
        perbuatannya, seorang duduk di sebelah kanan dan
        yang lain duduk di sebelah kiri”. (QS. Qaf : 17)."
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/pengingat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="220dp"
            android:text="Tidak Ada Pengingat Diset" />
<androidx.cardview.widget.CardView
    android:id="@+id/lihat_kebaikan"
    android:layout_width="139dp"
    android:layout_height="139dp"
    android:layout_marginTop="300dp"
    android:layout_marginLeft="50dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bgro"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:layout_marginLeft="23dp"
        android:text="Lihat Kebaikan"/>
</androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lihat_keburukan"
            android:layout_width="139dp"
            android:layout_height="139dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/lihat_kebaikan">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bgro"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="103dp"
                android:layout_marginLeft="23dp"
                android:text="Lihat Keburukan"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_kebaikan"
            android:layout_width="139dp"
            android:layout_height="139dp"
            android:layout_below="@+id/lihat_kebaikan"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bgro"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="103dp"
                android:layout_marginLeft="23dp"
                android:text="Add Kebaikan"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_kesalahan"
            android:layout_width="139dp"
            android:layout_height="139dp"
            android:layout_below="@+id/lihat_keburukan"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/lihat_kebaikan">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bgro"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="103dp"
                android:layout_marginLeft="23dp"
                android:text="Add Keburukan"/>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</ScrollView>
</RelativeLayout>
